<Page x:Class="CommunicationsCompany.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationsCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="tbLogin"></TextBox>

            <TextBlock Margin="0,10,0,0">Пароль</TextBlock>
            <PasswordBox Margin="0,0,0,20" x:Name="pbPassword"></PasswordBox>

            <Button x:Name="btnAuth" Click="btnAuth_Click">Авторизоваться</Button>
        </StackPanel>
    </Grid>
</Page>
